{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "windows-only",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "MSVC17",
            "hidden": true,
            "inherits": "windows-only",
            "binaryDir": "${sourceDir}/build/MSVC",
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "/W4 /WX /EHsc"
            }
        },
        {
            "name": "MinGW",
            "hidden": true,
            "inherits": "windows-only",
            "binaryDir": "${sourceDir}/build/MinGW",
            "generator": "MinGW Makefiles",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-Werror -Wall -Wpedantic -Wconversion -Wextra",
                "CMAKE_CXX_COMPILER": "g++",
                "VCPKG_TARGET_TRIPLET": "x64-mingw-static"
            }
        },
        {
            "name": "clang",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/clang",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-Werror -Wall -Wpedantic -Wconversion -Wextra",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "testAll",
            "hidden": true,
            "cacheVariables": {
                "BUILD_TESTS": "On"
            }
        },
        {
            "name": "MSVC17-testAll",
            "description": "MSVC 17 build with tests enabled",
            "inherits": [
                "MSVC17",
                "testAll"
            ]
        },
        {
            "name": "MinGW-debug-testAll",
            "description": "MinGW-gcc debug build with tests enabled",
            "inherits": [
                "MinGW",
                "testAll",
                "debug"
            ]
        },
        {
            "name": "clang-debug-testAll",
            "description": "Ninja-clang debug build with tests enabled",
            "inherits": [
                "clang",
                "testAll",
                "debug"
            ]
        }
    ]
}